{
    "version": "0.2.0",
    "configurations": [
        {
            // J-Link
            "name": "Debug (J-Link)",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/fanboard.elf",
            "rtos": "FreeRTOS",
            "servertype": "jlink",
            "device": "CC3220SF",
            "interface": "swd",
            "serialNumber": "",
            "runToEntryPoint": "resetISR",
            "showDevDebugOutput": "none",
            "svdFile": "${workspaceRoot}/svd/CC32xxSF.svd",
            "rttConfig": {
                "enabled": false,
                "address": "auto",
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "noprompt": true,
                        "clear": false
                    }
                ]
            },
            "preLaunchCommands": [
                "monitor speed 50000"
            ]
        },
        {
            // OpenOCD with XDS110
            "name": "Debug (OpenOCD XDS110)",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${command:cmake.buildDirectory}",
            "servertype": "openocd",
            "executable": "fanboard.elf",
            "rtos": "FreeRTOS",
            "searchDir": [ "/usr/local/share/open-ocd/scripts" ],
            "configFiles": [ "board/ti_cc3220sf_launchpad.cfg" ],
            "runToEntryPoint": "resetISR",
            "showDevDebugOutput": "none",
            "svdFile": "${workspaceRoot}/svd/CC32xxSF.svd"
        }
    ]
}